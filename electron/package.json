{
    "name" : "NPstore" ,
    "version" : "4.1.0",
    "icon" : "logo" ,
    "main" : "app.js",
    "script" :{
        "build_win" : "electron-packager . NPstore --platform=win32 --arch=x64 --asar --icon=ico/logo --overwrite --electron-version=4.1.0" ,
        "build_pi" : "electron-packager . NPstore --platform=linux --arch=armv7l --asar --icon=ico/logo.png --overwrite --electron-version=3.1.3" ,
        "build_linux" : "electron-packager . NPstore --platform=linux --arch=x64 --asar --icon=ico/logo.png --prune=true --out=release-builds --overwrite --electron-version=4.1.0" ,
        "build_all" : "electron-packager . NPstore --all --all --asar --overwrite --electron-version=4.1.0" 
    }
}